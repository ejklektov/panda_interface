
<!DOCTYPE html>
<html lang="en" ng-app = "help" ng-controller = "inquireAnsCtrl">

<head>
    <script src = "http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
    <script src = "http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular-route.min.js"></script>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Panda - admin</title>

    <!-- Bootstrap Core CSS -->
    <link href="bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet">

    <!-- Timeline CSS -->
    <link href="dist/css/timeline.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="dist/css/sb-admin-2.css" rel="stylesheet">

    <!-- Morris Charts CSS -->
    <link href="bower_components/morrisjs/morris.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

<div id="wrapper">

    <div ng-include="'nav'"></div>
    <div class="row">
    </div>

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Inquire 답변</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <form role="form">
                                <div class = "inquire_answer">
                                    <label>Inquire</label>
                                    <br>
                                    <div class = "answer" style = "margin-left: 20px;">
                                        {{new.inquire}}
                                    </div>
                                    <br>
                                    <label style="margin-top : 10px;">Answer</label>
                                    <!--<input ng-model="new.question" class="form-control" placeholder="{{new.question}}" type="text">-->
                                    <br>
                                    <input ng-model="new.answer" class="form-control" placeholder="{{new.answer}}" type="text">
                                    <br>
                                    <input style="float:right" class = "btn btn-default" type="button" ng-click="send_ans(new._id)" value = "확인">
                                    <br>
                                </div>
                                <hr style="margin-top:30px;">
                                <!--date 기준으로 filter 넣어야함-->
                                <div ng-repeat = "inquire in inquires | orderBy: '-date'" >
                                    <div class="form-group" style="margin-top:20px; margin-bottom:50px;">
                                        <div class="drawup"><label>작성자 : </label> {{inquire.name}}<label style="margin-left:25%;">type: </label> {{inquire.type}}</div>
                                        <div class="time"><label>시간 : </label> {{inquire.date | date:'yyyy/MM/dd HH:mm:ss'}}</div>
                                        <br>
                                        <label>Inquire</label>
                                        <br><div style="margin-left:20px">{{inquire.inquire}}</div>
                                        <br><label>Answer</label>
                                        <br><div style="margin-left:20px">{{inquire.answer}}</div>
                                        <br>
                                        <div class = "modify_confirm" style="float:right; margin-bottom:10px;">
                                            <input class = "btn btn-default" type="button" ng-model="modify" ng-click="inquire_ans(inquire._id)" value = "답변">
                                            <input class = "btn btn-default" type="button" ng-model="modify" ng-click="delete_ans(inquire._id)" value = "답변 삭제">
                                        </div>
                                    </div>
                                    <hr>
                                </div>
                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->

<!-- jQuery -->
<script src="bower_components/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="bower_components/metisMenu/dist/metisMenu.min.js"></script>

<!-- Morris Charts JavaScript -->
<script src="bower_components/raphael/raphael-min.js"></script>
<script src="bower_components/morrisjs/morris.min.js"></script>
<script src="js/morris-data.js"></script>

<!-- Custom Theme JavaScript -->
<script src="dist/js/sb-admin-2.js"></script>
<script src="../admin/controller_admin/admin_controller.js"></script>
</body>

</html>
